<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Notes.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
        <Editor
         x:Name="CaixaEditor"
         Text=""
         HeightRequest="300"/>
         

         <HorizontalStackLayout
             Padding="600,0">
                <Button
        x:Name="Salvar"
        Text="Salvar"
        Clicked="Salvar_Clicked"
        HorizontalOptions="Center"
        Margin="10"/>
                <Button
        x:Name="Apagar"
        Text="Apagar"
        Clicked="Apagar_Clicked"
        HorizontalOptions="Center"
        Margin="10"/>
                <Button
        x:Name="Caminho"
        Text="Caminho"
        Clicked="AbrirGerenciador"
        HorizontalOptions="Center"
        Margin="10"/>
            </HorizontalStackLayout>
            
        </VerticalStackLayout>
        
    </ScrollView>

</ContentPage>
